<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.RegistroController">
    <children>
        <Label text="Registro" />
      <Label text="Nombre de usuario:" />
      <TextField fx:id="nombreUsuario" promptText="Nombre " />
      <Label text="Email de usuario:" />
      <TextField fx:id="emailUsuario" promptText="Email" />
      <Label text="Contraseña de usuario:" />
      <TextField fx:id="contraseniaUsuario" promptText="Contraseña" />
      <HBox prefHeight="0.0" prefWidth="200.0" spacing="47.0">
         <children>
             <Button fx:id="secondaryButton" onAction="#switchToLogin" text="Volver" />
            <Button fx:id="registroButton" onAction="#registrarse" text="Registrarse" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
