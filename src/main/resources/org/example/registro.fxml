<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="331.0" prefWidth="473.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.RegistroController">
    <children>
        <Label text="Registro" />
      <Label text="Nombre de usuario:" />
      <TextField fx:id="nombreUsuarioTextField" promptText="Nombre " />
      <Label text="Email de usuario:" />
      <TextField fx:id="emailUsuarioTextField" promptText="Email" />
      <Label text="Contraseña de usuario:" />
      <TextField fx:id="contraseniaUsuarioTextField" promptText="Contraseña" />
      <Label fx:id="mensajeAlerta" text="Label" />
      <HBox prefHeight="0.0" prefWidth="200.0" spacing="108.0">
         <children>
             <Button fx:id="secondaryButton" onAction="#switchToLogin" text="Volver" />
            <Button fx:id="registroButton" alignment="CENTER" contentDisplay="CENTER" onAction="#registrarse" text="Registrarse" textAlignment="CENTER" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
